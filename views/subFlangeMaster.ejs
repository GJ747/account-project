    <div class="p-2 flex-grow-1 bd-highlight" >
    <div class="container mt-3">
        <h5 style="color: white;background-color:#613d94;padding: 5px;margin: 0px;" >Create Flange Information</h5>
        <div id='state' style="margin: 0px;background-color: white;padding: 5px;" >

    <form action="/createFlange/create1" method="post">
        <input type="hidden" name="name" value="<%=name%>">
            <div class='row'>
                <div class='col-sm'>
                    <label>Flange Number</label>
                    <input  class="form-control" type="text" name='flangeNo' /> 
                    <label>Condition</label>
                    <select class="form-select" aria-label="Default select example"  name='condition'>
                        <option value="1">India</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <div class='d-flex justify-content-start'>
                    <label >Loan Returned</label>
                    <div style="margin-left: 20px;">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="loanReturned"/>
                        <label class="form-check-label" >
                            yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="loanReturned"/>
                        <label class="form-check-label" >
                            no
                        </label>
                    </div>
                    </div>
                    </div>
                  </div>
                <div class='col-sm'>
                    <label>Width</label>
                    <select class="form-select" aria-label="Default select example"  name='width'>
                        <option value="1">India</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <label>Weigth</label>
                    <input  class="form-control" type="text" name='weigth' /> 
                </div>
                <div class='col-sm'>
                    <label>Diameter</label>
                    <select class="form-select" aria-label="Default select example" name='diameter'>
                        <option value="1">Raj</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    <div class='d-flex justify-content-start'>
                    <label >On Loan</label>
                    <div style="margin-left: 20px;" >
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="onLoan"/>
                        <label class="form-check-label" >
                            yes
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="onLoan"/>
                        <label class="form-check-label" >
                            no
                        </label>
                    </div>
                    </div>
                    </div>
                    <button class='btn btn-primary' style="float: right;margin-top: 3%;" >Create Flange</button>
                </div>
              </div>
    </form>


            </form>
            <% if(popup===true){ %> 
            <h4 style="text-align: center;color: green;">Information Saved Successfully</h4>
            <% } %> 
            <form action="/createFlange" method="post">
                <input type="hidden" name="name" value="<%=name%>">
